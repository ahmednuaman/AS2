/*	@author:		Ahmed Nuaman (ahmedn@google.com)	@description:	Handles all your tracing needs.	@last-update:	13/11/2008 09:47*/import com.tangozebra.string.TZReplace;import flash.external.ExternalInterface;import mx.data.binding.ObjectDumper;class com.tangozebra.utils.TZTrace {	public static var NAME:String								= 'TZTrace';		public static function info(s:Object):Void	{		echo(s.toString(),'info');	}		public static function dump(o:Object):Void	{		echo(ObjectDumper.toString(o),'debug');	}		public static function echo(s:String,t:String):Void	{		if (_root.TZTraceDebug !== false)		{			var date:Date = new Date();			var str:String = date.getFullYear() + '/' + 						(date.getMonth() < 10 ? '0' + date.getMonth() : date.getMonth()) + '/' + 						(date.getDate() < 10 ? '0' + date.getDate() : date.getDate()) + ' @ ' + 						(date.getHours() < 10 ? '0' + date.getHours() : date.getHours()) + ':' + 						(date.getMinutes() < 10 ? '0' + date.getMinutes() : date.getMinutes()) + ':' + 						(date.getSeconds() < 10 ? '0' + date.getSeconds() : date.getSeconds()) + ' - ' + s;					ExternalInterface.call('console.' + t + '("' + TZReplace.replace(str,'"','\'') + '")');					trace(str);		}	} }